@model IEnumerable<ProductResponseModel>
<h1>Product List</h1>
<a href="/products/create">Add New Product</a>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <Td>@item.Id</Td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>
                    @* <a href="/Category/Edit/@item.Id">Edit</a> | *@

                    <a asp-action="Edit" asp-controller="Products" asp-route-id="@item.Id">Edit</a> |
                    @* <a href="/Category/delete/@item.Id">Delete</a> *@
                    <a asp-action="Delete" asp-controller="Products" asp-route-id="@item.Id">Delete</a> |

                    @*<a href='/Product/WithCategory/@item.Id'>Products</a>*@
                </td>
            </tr>

        }
    </tbody>
</table>