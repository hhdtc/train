@model IEnumerable<CategoryResponseModel>
<h1>Category List</h1>
<a href="/category/create">Add New Category</a>
<table class="table table-bordered table-hover">
    <thead>      <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr> 
            <Td>@item.Id</Td>
            <td>@item.CategoryName</td>
            <td>
               @* <a href="/Category/Edit/@item.Id">Edit</a> | *@
              
               <a asp-action="Edit" asp-controller="Category"  asp-route-id="@item.Id">Edit</a> |
               @* <a href="/Category/delete/@item.Id">Delete</a> *@
               <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id">Delete</a> |

               <a href='/Product/WithCategory/@item.Id'>Products</a>
            </td>
        </tr>    
        
        }
    </tbody>
</table>